.cv__section
    margin 1em 0 2em

.cv_header
    text-transform uppercase
    font-weight normal
    font-size 24px
    margin 0.5em 1em

.cv__table
    width 100%
    border-collapse collapse

.cv__table-row
    border-bottom 1px solid #61c9a4

    &:last-child
        border-bottom none

.cv__table-name-col
    width 35%
    padding 0.5em

.cv__table-value-col
    padding 0.5em

.cv__link
    text-decoration none
